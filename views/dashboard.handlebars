<div class="pure-g" id='dashboard-row'>
  <div class="pure-u-1" id='dashboard-column'>
    <div class="pure-g" id='create-new-post-row'>
      <div class="pure-u-1" id="create-new-post-column">

        <h2>Create New Post</h2>

        <form class="new-post-form">
          <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
          </div>
          <div>
            <label for="post-url">Link</label>
            <input id="post-url" name="post-url" />
          </div>
          <button type="submit" class="btn">Create</button>
        </form>

      </div>
    </div>
      

    {{#if posts.length}}
    <div class="pure-g" id='post-detail-row'>
      <div class="pure-u-1" id="post-detail-column">
        <h2>Your Posts</h2>
        <ol>
          {{#each posts as |post|}}
          <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
          </li>
          {{/each}}
        </ol>
      </div>
    </div>
    {{/if}}
  </div>
</div>

<script src="/javascript/add-post.js"></script>
